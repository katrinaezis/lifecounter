<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.washington.kezis.lifecounter.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Player One"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/p1"
            android:textAlignment="center" />
        <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p1l"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/p1"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/p1l"
            android:id="@+id/ll1"
            android:weightSum="4">
            <Button
                android:text="-5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p1m5"
                android:layout_weight="1"/>

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p1m1"
                android:layout_weight="1"/>

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p1p1"
                android:layout_weight="1"/>

            <Button
                android:text="+5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p1p5"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:text="Player Two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1"
            android:layout_centerHorizontal="true"
            android:id="@+id/p2"
            android:textAlignment="center"
            />

        <TextView
            android:text="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p2"
            android:layout_alignLeft="@+id/p2"
            android:layout_alignStart="@+id/p2"
            android:id="@+id/p2l"
            android:layout_alignRight="@+id/p1"
            android:layout_alignEnd="@+id/p1"
            android:textAlignment="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll2"
            android:layout_below="@+id/p2l"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="4">
            <Button
                android:text="-5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p2m5"
                android:layout_weight="1"/>

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p2m1"
                android:layout_weight="1"/>

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p2p1"
                android:layout_weight="1"/>

            <Button
                android:text="+5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p2p5"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:text="Player Three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll2"
            android:layout_alignLeft="@+id/p1"
            android:layout_alignStart="@+id/p1"
            android:id="@+id/p3"
            android:textAlignment="center" />

        <TextView
            android:text="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p3"
            android:layout_alignRight="@+id/p2l"
            android:layout_alignEnd="@+id/p2l"
            android:id="@+id/p3l"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/p3l"
            android:id="@+id/ll3"
            android:weightSum="4">
            <Button
                android:text="-5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p3m5"
                android:layout_weight="1"/>

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p3m1"
                android:layout_weight="1"/>

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p3p1"
                android:layout_weight="1"/>

            <Button
                android:text="+5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p3p5"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:text="Player Four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll3"
            android:layout_alignRight="@+id/p1"
            android:layout_alignEnd="@+id/p1"
            android:id="@+id/p4"
            android:textAlignment="center" />

        <TextView
            android:text="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p4"
            android:id="@+id/p4l"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/p4l"
            android:weightSum="4"
            android:id="@+id/ll4">

            <Button
                android:text="-5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p4m5"
                android:layout_weight="1"/>

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p4m1"
                android:layout_weight="1"/>

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p4p1"
                android:layout_weight="1"/>

            <Button
                android:text="+5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p4p5"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:id="@+id/lm"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text=" "
            android:layout_below="@id/ll4"/>
    </RelativeLayout>
</ScrollView>
